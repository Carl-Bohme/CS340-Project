<main>

    {{>header}}

    {{>viewBar}}

    {{>birdModal}}
    {{>subjectModal}}
    {{>handlerModal}}
    {{>stationModal}}

    <div class="home-flex-content">

        {{>createBar}}

        <div class="table-container">
            <h2>{{data.subject.name}}</h2>
            <ul>
                <li><span class="bold">ID:</span> {{data.subject.id}}</li>
                {{#each data.subjects}}
                <li><span class="bold">Address:</span> {{this.nbr}} {{this.street}}, {{this.city}}</li>
                {{/each}}

            </ul>

            <h4>Birds Watching {{data.subject.name}}:</h4>
            <table class="home-table">
                <tr>
                    <th>Bird ID</th>
                    <th>Production Date</th>
                    <th>Race</th>
                </tr>
                {{#each data.birds}}
                <tr>
                    <td><a href="/view/bird/{{this.id}}">{{this.id}}</a></td>
                    <td>{{this.production_date}}</td>
                    <td>{{this.race}}</td>
                </tr>
                {{/each}}
            </table>
            <button onclick="deleteSubject({{data.subject.id}})">Delete</button>
        </div>

    </div>

</main>