<main>
    {{>header}}

    {{>viewBar}}

    {{>birdModal}}
    {{>subjectModal}}
    {{>handlerModal}}
    {{>stationModal}}

    <div class="home-flex-content">

        {{>createBar}}

        <div class="table-container">
            <h2>Subjects</h2>
            <table class="home-table">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                </tr>
                {{#each subjects}}
                <tr>
                    <td><a href="/view/subject/{{this.id}}">{{this.id}}</a></td>
                    <td>{{this.name}}</td>
                    <td>{{this.nbr}} {{this.street}}, {{this.city}}</td>
                </tr>
                {{/each}}
            </table>
        </div>

    </div>

</main>