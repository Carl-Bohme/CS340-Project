<div id="modal-backdrop" class="hidden"></div>

<div id="assign-bird-modal" class="hidden modal">

    <div class="modal-close">
        <button type="button" onclick="closeModal()" id="close-modal-button">&times;</button>
    </div>

    <div class="modal-header">
        <h3>Assign Bird to {{data.handler.codename}}</h3>
    </div>

    <form id="add_bird" action="/assignBird/{{data.handler.codename}}" method="post">

        <div class="modal-body">

            <div class="modal-input-element">
                <label for="bird_id">Bird</label>
                <select name="bird_id" value = "{{this.id}}"> 
                    {{#each data.allBirds}}
                        <option value="{{this.id}}">Bird {{this.id}}</option>
                    {{/each}}
                </select>
            </div>



        </div>

        <div class="modal-footer">
            <input type="submit" id="modal-accept" class="action-button" value="Submit")>
        </div>

    </form>

</div>