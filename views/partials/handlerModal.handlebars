<div id="modal-backdrop" class="hidden"></div>

<div id="create-handler-modal" class="hidden modal">

    <div class="modal-close">
        <button type="button" onclick="closeModal()" id="close-modal-button">&times;</button>
    </div>
    
    <div class="modal-header">
        <h3>Create New Handler</h3>
    </div>

    <div class="modal-body">

        <div class="modal-input-element">
            <label for="codename-input">Codename</label>
            <input type="text" id="codename-input"></input>
        </div>

        <div class="modal-input-element">
            <label for="username-input">Username</label>
            <input type="text" id="username-input"></input>
        </div>

        <div class="modal-input-element">
            <label for="password-input">Password</label>
            <input type="text" id="password-input"></input>
        </div>

        <div class="modal-input-element">
            <label for="station-input">Station</label>
            <input type="text" id="station-input"></input>
        </div>

        <div class="modal-input-element">
            <label for="nbr-input">House Number</label>
            <input type="number" id="nbr-input">
        </div>

        <div class="modal-input-element">
            <label for="street-input">Street</label>
            <input type="text" id="street-input"></input>
        </div>

        <div class="modal-input-element">
            <label for="city-input">City</label>
            <input type="text" id="city-input"></input>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" id="modal-accept" class="action-button">Create</button>
    </div>

    </div>
</div>