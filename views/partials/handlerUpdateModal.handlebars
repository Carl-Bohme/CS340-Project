<div id="modal-backdrop" class="hidden"></div>

<div id="update-handler-modal" class="hidden modal">

    <div class="modal-close">
        <button type="button" onclick="closeModal()" id="close-modal-button">&times;</button>
    </div>

    <div class="modal-header">
        <h3>Update Handler {{data.handler.codename}}</h3>
    </div>

    <form id="add_handler" action="/updateHandler/{{data.handler.codename}}" method="post">

        <div class="modal-body">

            <div class="modal-input-element">
                <label for="station_name">Station</label>
                <select name="station_name"> 
                    {{#each data.stations}}
                    <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>



        </div>

        <div class="modal-footer">
            <input type="submit" id="modal-accept" class="action-button" value="Submit")>
        </div>

    </form>

</div>