    <div class="modal-close">
        <button type="button" onclick="closeModal()" id="close-modal-button">&times;</button>
    </div>
    
    <div class="modal-header">
        <h3>Create New Station</h3>
    </div>

    <div class="modal-body">

        <div class="modal-input-element">
            <label for="name-input">Name</label>
            <input type="text" id="name-input"></input>
        </div>

        <div class="modal-input-element">
            <label for="lat-inpu">Lattitude</label>
            <input type="number" id="lat-input">
        </div>

        <div class="modal-input-element">
            <label for="lon-input">Longitude</label>
            <input type="number" id="lon-input">
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" id="modal-accept" class="action-button">Create</button>
    </div>

    </div>
